CC = gcc
CFLAGS = -Werror -Wextra -Wall -pedantic
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm

all : $(NAME)


%.o : %.c
	$(CC) -c $< -o  $@

$(NAME) : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean :
	$(RM) *~

oclean :
	$(RM) *.o

fclean :
	$(RM) $(clean) $(NAME) $(oclean)

fclean : $(RM) -f

re :
	$(oclean) $(all)
